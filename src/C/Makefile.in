export CC=@CC@
export CFLAGS=@CFLAGS@
export SONAME=@SONAME@
export SOEXT=@SOEXT@
export prefix=@prefix@
export exec_prefix=@exec_prefix@
export LIBDIR=@libdir@
export INSTALL_OPTIONS=@INSTALL_OPTIONS@

.PHONY: all install clean distclean uninstall

all:
	make -C miniz
	make -C compress
	make -C fuzzy

install:
	make -C miniz install
	make -C compress install
	make -C fuzzy install

clean:
	make -C miniz clean
	make -C compress clean
	make -C fuzzy clean

distclean:
	make -C miniz distclean
	make -C compress distclean
	make -C fuzzy distclean
	rm -rf *.cache config.* Makefile

uninstall:
	make -C miniz uninstall
	make -C compress uninstall
	make -C fuzzy uninstall
