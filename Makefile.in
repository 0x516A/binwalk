export CC=@CC@
export CFLAGS=@CFLAGS@
export SONAME=@SONAME@
export SOEXT=@SOEXT@
export prefix=@prefix@
export exec_prefix=@exec_prefix@
export LIBDIR=@libdir@
export INSTALL_OPTIONS=@INSTALL_OPTIONS@

PYTHON=python
SRC_C_DIR="./src/C"

.PHONY: all install build deps clean uninstall

all: build

install:
	make -C $(SRC_C_DIR) install
	$(PYTHON) ./setup.py install --yes
	ldconfig || true

build:
	make -C $(SRC_C_DIR)
	$(PYTHON) ./setup.py build

deps:
	./deps.sh

clean:
	make -C $(SRC_C_DIR) clean
	$(PYTHON) ./setup.py clean

distclean: clean
	make -C $(SRC_C_DIR) distclean
	rm -rf Makefile config.* *.cache

uninstall:
	make -C $(SRC_C_DIR) uninstall
	$(PYTHON) ./setup.py uninstall
